    <!-- Add a debug logger -->
    <script>
      // Debug helper
      function showDebugInfo(info) {
        const debugBox = document.getElementById("debug-info");
        if (debugBox) {
          debugBox.textContent = JSON.stringify(info, null, 2);
        }
      }
    </script>

